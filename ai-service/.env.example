# CaboAi AI Service Environment Configuration

# Application Settings
APP_NAME=CaboAI Service
ENVIRONMENT=development
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Security
AI_SERVICE_API_KEY=your-api-key-here
SECRET_KEY=your-secret-key-here

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/caboai
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Redis Configuration (for production caching)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Los Cabos Specific Settings
TIMEZONE=America/Mazatlan
DEFAULT_LANGUAGE=es
SUPPORTED_LANGUAGES=["es", "en"]

# Business Directory
BUSINESS_DIRECTORY_CACHE_TTL=3600

# Currency API (optional)
CURRENCY_API_KEY=
BANXICO_TOKEN=

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Monitoring and Logging
SENTRY_DSN=
LOG_LEVEL=INFO

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_TRANSLATIONS=true
ENABLE_BUSINESS_INTELLIGENCE=true